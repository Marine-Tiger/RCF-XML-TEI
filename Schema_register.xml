<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.tei-c.org/release/xml/tei/custom/schema/relaxng/tei_all.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<?xml-model href="http://www.tei-c.org/release/xml/tei/custom/schema/relaxng/tei_all.rng" type="application/xml"
	schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0">
   <teiHeader>
      <fileDesc>
         <titleStmt>
            <title>Registre coté <date when="1700-12-20"/></title>
            <!-- Registre R418 années 1821-1824 -->
         </titleStmt>
         <editionStmt>
            <edition>Transcription encodée par <name/></edition>
            <!-- Auteur.rice de l'encodage et édition numérique -->
            <respStmt>
               <!-- Crédit aux transcripteur.rices, on peut ajouter @ref pour faire un lien vers le memoire -->
               <resp>Transcription produite par / tiree du mémoire de M1/M2 de</resp>
               <name/>
            </respStmt>
         </editionStmt>
         <publicationStmt>
            <p>A établir. </p>
            <!-- Edition numérique de la transcription du registre -->
         </publicationStmt>
         <sourceDesc>
            <msDesc source="lien vers portail Lagrange">
               <!-- Description du registre. Si on fait le lien vers le portail Lagrange, on peut limiter la description à la provenance, série et cote. -->
               <msIdentifier>
                  <!-- dans <msIdentifier> on peut ajouter un @facs pour mettre le lien vers le registre numerise (Lagrange ou RCF) -->
                  <institution>Bibliothèque-musée de la Comédie-Française</institution>
                  <!-- La série et sous-série permettra d'identifier le type de registre, notamment pour la fin du 18ème siècle et le 19ème siècle -->
                  <repository>Série/sous-série</repository>
                  <idno>cote</idno>
               </msIdentifier>
            </msDesc>
         </sourceDesc>
      </fileDesc>
      <profileDesc>
         <!-- Le profileDesc est normalement utilisé pour décrire les "participants" dans un texte, définir des termes etc...
         Pour le moment,je ne sais pas si cela est utile pour nous. -->
         <!-- <particDesc> -->
         <!-- <calendarDesc> pour le registre avec le calendrier republicain? -->
      </profileDesc>
      <!--      <encodingDesc>
         <schemaRef></schemaRef>
         </encodingDesc> Renvoie au fichier XML du schéma -->
      <revisionDesc>
         <!-- Chaque modification du fichier ici. Cela permet de garder une trace et d'identifier plus rapidement un problème au besoin -->
         <change when="2024-10-30">Reorganisation du body, ajout votes.</change>
         <change when="2024-10-29">Ajout de castList er repertoire</change>
         <change when="2024-10-25">Header, construction du body.</change>
         <change when="2024-10-24">Création du fichier, construction du Header.</change>
      </revisionDesc>
   </teiHeader>
   <text>
      <!-- On peut mettre un <front> qui sert à décrire la page de garde. -->
      <!--      <front facs="https://comedie-francaise.bibli.fr/visionneuse.php?lvl=afficheur&explnum=23875#page/4/mode/2up">
         
      </front>-->
      <body>

         <!--On ne peut pas mettre @when dans les div. Est-ce que l'on crée un id pour les dates ? C'est risque, surtout si on a des seances sans date-->
         <div type="type_assemblee" corresp="1700-01-01">

            <!-- I. TITRE (optionnel) -->
            <head>Comite/Seance du <date when="1800-01-01">date</date></head>


            <!-- II. PREAMBULE (optionnel) -->
            <div type="preambule">
               <!-- Exemple tire de Spinec, R52_0_1692 -->
               <p>Ce jour d'huy <date when="1692-01-06">dimanche 6me janvier 1692</date> la
                  Compagnie s'est assemblée extraordint <!-- est-ce que l'on reproduit les abbreviations, ou est-ce que l'on utilise seulement le mot entier? les deux sont possibles -->
                  <!--<choice>
                     <expan>extraordinairement</expan>
                     <abbr>extraordint.</abbr>
                  </choice>--> pour dellibérer de plusieurs affaires les présens a
                  l'assemblée ont signé avant <time when="10:00:00">dix heures</time> pour le droit
                  de jetton</p>
            </div>

            <div>
               <p><term type="thematique" corresp="id_mot"/></p>
            </div>

            <!-- III. PRESENTS ET ABSENTS (optionnel) -->
            <!-- A. Signatures -->
            <div type="signatures" corresp="1700-01-01">
               <signed corresp="id_nom">Nom</signed>
            </div>

            <!-- B. Absents (optionnel) -->
            <div type="abs" corresp="date">
               <head>texte</head>
               <!-- Dans les registres du 17e-18e, les absents sont divisés entre les hommes et les femmes, donc on aura deux listes -->
               <list>
                  <head>Mrs</head>
                  <item corresp="id_nom">Nom</item>
               </list>
               <list>
                  <head>Mlles</head>
                  <item corresp="id_nom">Nom</item>
               </list>
            </div>

            <!-- IV. DECISIONS (optionnel pour le 18eme) -->
            <!-- Un element <div> pour chaque decisions avec un @corresp et l'id du sujet aborde-->
            <div type="decision" corresp="id_sujet">
               
               <!-- A. Ordre du jour (optionnel) -->
               <head type="agenda">Assemblee pour ... </head>
               <!-- Si l'ordre du jour est dans la marge, on respecte les règles de transcription établies -->
               <div type="decision" corresp="id_sujet">
                  <!-- Exemple avec comite du 29/04/1830 (R420) -->
                  <head type="agenda">[Signification de <persName corresp="id_nom">Mlle Ross
                        Despréaux</persName>]</head>
                  <p>Le comité arrête que la signification faite à la <orgName corresp="id_org"
                        >Comédie-Française</orgName> sur la personne de <persName corresp="id_nom"
                        >M. Michelot</persName>, l’un des membres du comité, à la requête que
                        <persName corresp="id_nom">Mlle Ross Despréaux</persName>, actrice
                     pensionnaire de la dite signification, en date du <date>28 mai</date> sera, vu
                     l’absence de <persName corresp="id_nom">M. De Normandie</persName> avoué membre
                     du conseil, envoyée à <persName corresp="id_nom">M. Dejoly</persName>,
                     président du conseil, qui sera prié de vouloir bien prendre la peine de mettre
                     la <orgName corresp="id_org">Comédie</orgName> en règle à cet égard par la voie
                     convenable. </p>
               </div>
            </div>

            <!-- B. Lecture du repertoire (17eme-18eme) -->
            <div type="decision" corresp="id_sujet">
               <!-- Exemple tire de Spinec du R52_0_1681 -->
               <list>
                  <head>Repertoire</head>
                  <item><date>29 mardy</date><title corresp="id_piece">Andromede</title></item>
                  <!-- Dans le cas ou une piece est barree -->
                  <item><date>7 mercredy</date>
                     <!-- l'element <del> permet d'encoder les suppressions dans le texte. Avec le @type, on peut preciser que c'est du texte barre, et on pourra l'afficher comme tel grace au CSS -->
                     <del type="barre"><title corresp="id_piece">La Jalouse
                        d'elle-meme</title></del>
                     <title corresp="id_piece">La Devineresse</title></item>
               </list>
            </div>

            <!-- Trouver comment encoder les parties comptables, et permettre d'ajouter les exceptions comme les amendes de la semaine pour un registre, les places dans l'assemblee etc...-->


            <!-- V. VOTES -->
            <div type="vote" corresp="id_sujet, id_piece">
               <!-- exemple tire de la seance du 07 janvier 1692, l'assemblee vote pour la lecture de la tragedie des Heraclides -->
               <cb n="1"/>
               <list type="vote_pour">
                  <head>la pièce est joüable</head>
                  <item corresp="id_nom">Du Perier, en la racomodant</item>
                  <item corresp="id_nom">Poisson Jouable</item>
                  <item corresp="id_nom"> La pièce est jouable en la racomodant Beauval</item>
                  <item corresp="id_nom">Je la trouve jouable en la corigeant Delathorilliere</item>
                  <item corresp="id_nom">Je trouve que la pièce peut estre joüée en changeant
                     quelques scènes et quelque chose dans la disposition de la pièce Le
                     Comte</item>
                  <item corresp="id_nom">Devilliers Je trouve que la pièce est jouable en racomodan
                     quelque chozze</item>
               </list>
               <cb n="2"/>
               <list type="vote_contre">
                  <head>elle n'est pas jouable</head>
                  <item corresp="id_nom">De Beaubour elle n'est point jouable en l'estat qu'elle est </item>
                  <item corresp="id_nom">Guérin</item>
                  <item corresp="id_nom"> La pièce des Eraclides ne me paroist point jouable en
                     l'estat quelle est. Du reste je ne suis pas assez éclairé pour sçavoir ce qu'il
                     y a ay raccomoder De Rosélis</item>
                  <item corresp="id_nom">Raisin</item>
                  <item corresp="id_nom">elle n'est point jouable Desmare</item>
               </list>
            </div>
            
            <!-- V. DISTRIBUTION DES ROLES (optionnel, 18eme: quand sont separees des comites) -->
            <div type="distribution_roles" corresp="id_piece, date">
               <!-- Exemple tire du R52_4 -->
               <head>Disposition de <title corresp="id_piece">La Princesse d'Elide</title></head>
               <!-- Je pense que l'on peut utiliser <castList>, cela permet d'utiliser les elements <role> et <actor> -->
               <castList corresp="date">
                  <castItem>
                     <role corresp="id_role">La Princesse d'Elide</role>
                     <actor corresp="id_nom">Mlle. Desmares</actor>
                  </castItem>
                  <castItem>
                     <role corresp="id_role">Philis</role>
                     <actor corresp="id_nom">Mlle. Mimy</actor>
                  </castItem>
               </castList>
            </div>

            <!-- VI. REQUETES (Optionnel) -->
            <div type="requete" corresp="id_sujet">
               <head/>
               <p/>
            </div>

            <!-- S'il y a à nouveau des signatures -->
            <div type="signature" corresp="date">
               <signed corresp="id_nom">Nom</signed>
            </div>
            
      <!-- Assemblee de lectures (optionnel)-->
            <div type="ass_lectures" corresp="1700-01-01">
               <head>Du <date when="1775-05-21">Dimanche 21 mai</date>.</head>
               <head>Assemblée pour Lectures.</head>
            <div type="vote" corresp="id_piece">
               <p><!--______-->
                  <title corresp="id_titre">Le Couronnement de Télemaque</title>, Comédie en un Acte, en Vers
                  De M. 
                  <list>
                     <item>15 voix d’acceptation.</item>
                     <item>1 Voix de Corrections.</item>
                     <item>3. Voix de Refus.</item>
                  </list>} Reçue
               </p>
            </div>
               
            </div>

            <!-- Notes de transcription 
            <p><del type="barre">texte barre</del></p>
            <p><add>texte ajoute</add></p>
            <p><gap reason="illisible"/>Texte illisible</p>
-->
         </div>
      </body>
   </text>
</TEI>
